.row
  - @restaurants.each do |restaurant|


    .card.col.s12.m6.l4.center
      .card-image.card-horizontal.waves-effect.waves-block.waves-light
        %img.activator{:src => restaurant.image.url}/
      .card-content
        %span.card-title.activator.grey-text.text-darken-4
          =link_to restaurant_path(restaurant) do
            .truncate.black-text
              = restaurant.name
          -#
        .card-action
          %p
            %a{:href => "#"} This is a link
      .card-reveal
        %span.card-title.grey-text.text-darken-4
          %i.material-icons.right close
          = link_to restaurant_path(restaurant), class: 'black-text' do
            = restaurant.name
        %p
          = restaurant.meal_type
        %p
          = restaurant.street
        %p




.col-xs-12
  = will_paginate @posts
.col-xs-12
  = link_to I18n.t('restaurant.report_new'), new_restaurant_path
