  - if @restaurant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"
      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :pyszne_address
    = f.text_field :pyszne_address
  .field
    = f.label :picture_address
    = f.text_field :picture_address
  .field
    = f.label :meal_type
    = f.text_field :meal_type
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :zip_code
    = f.text_field :zip_code
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .actions
    = f.submit 'Save'
